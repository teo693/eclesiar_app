# Eclesiar API Configuration
# Copy this file to .env and fill in your actual API key

# API URLs
API_WORLD_URL="https://api.eclesiar.com/countries"
API_SERVER_URL="https://api.eclesiar.com/server/status"

# Authentication Token
# Replace YOUR_API_KEY_HERE with your actual Eclesiar API key
AUTH_TOKEN="eclesiar_prod_YOUR_API_KEY_HERE"

# Optional: Additional API configuration
ECLESIAR_API_KEY="YOUR_API_KEY_HERE"

# Transaction costs and thresholds
TICKET_COST_GOLD=0.1
MIN_PROFIT_THRESHOLD=0.5
MIN_SPREAD_THRESHOLD=0.001

# Transaction limits
MAX_TRANSACTION_AMOUNT=10000
MIN_TRANSACTION_AMOUNT=1

# API workers configuration
API_WORKERS_MARKET=6
API_WORKERS_ANALYSIS=4
API_WORKERS_REGIONS=8
API_WORKERS_WAR=12
API_WORKERS_HITS=16

# Analysis parameters
MAX_OPPORTUNITIES_TO_ANALYZE=1000
CONFIDENCE_THRESHOLD=0.3
RISK_THRESHOLD=0.5

# Reporting parameters
REPORT_TOP_OPPORTUNITIES=20
REPORT_INCLUDE_TRIANGULAR=true

# Cache configuration
CACHE_DURATION_MINUTES=5
USE_CACHE=true

# Security parameters
MAX_API_CALLS_PER_MINUTE=60
API_RATE_LIMIT_DELAY=1.0

# Export configuration
EXPORT_FORMATS="txt,csv"
EXPORT_DIRECTORY="reports"

# Monitoring configuration
MONITORING_INTERVAL_SECONDS=300
ENABLE_REAL_TIME_MONITORING=false

# Optimization parameters
OPTIMIZE_FOR_VOLUME=true
OPTIMIZE_FOR_SPREAD=true
OPTIMIZE_FOR_RISK=false

# Historical analysis
ENABLE_HISTORICAL_ANALYSIS=false
HISTORICAL_DATA_DAYS=7

# Arbitrage configuration
CROSS_ARBITRAGE_ENABLED=true
CROSS_ARBITRAGE_MIN_PROFIT=1.0
TEMPORAL_ARBITRAGE_ENABLED=false
TEMPORAL_ARBITRAGE_WINDOW_HOURS=24

# Risk analysis
RISK_ANALYSIS_ENABLED=true
MARKET_VOLATILITY_THRESHOLD=0.1
LIQUIDITY_THRESHOLD=1000

# Backtesting
BACKTESTING_ENABLED=false
BACKTESTING_PERIOD_DAYS=30
BACKTESTING_INITIAL_CAPITAL=1000

# Experimental features
EXPERIMENTAL_FEATURES_ENABLED=false
MACHINE_LEARNING_ENABLED=false
PREDICTIVE_ANALYSIS_ENABLED=false
